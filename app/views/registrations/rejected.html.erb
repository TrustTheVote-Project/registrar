<div id="registration">
  <% if current_user %>
    <% content_for :subtitle do %>
      <h2>Processing Voter Registration Request</h2>
    <% end %>
    <h4>Thank you, <%= current_user.name %>!</h4>
  <% else %>
    <h4>&nbsp;</h4>
  <% end %>
  <p>You have <span class="bold">rejected</span></p>
  <p>the voter registration application for</p>
  <p><%= current_user ? @registration.name : @registration.abbreviated_name %></p>
  <table>
    <tr>
      <th>Reason:</th>
      <td><%= @reason %></td>
    </tr>
    <tr>
      <th>Comment:</th>
      <td><%= @comment %></td>
    </tr>
  </table>
</div>
